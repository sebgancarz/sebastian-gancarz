{
  "name": "taskrunner",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "init-project": "npm install && npm-run-all init:*",
    "init:dirs": "mkdirp dist/css src/images src/js src/sass src/vendor",
    "init:files": "touch README.md index.html src/sass/style.scss src/js/script.js",
    "test": "npm-run-all test:* lint",
    "test:html": "globstar nu-html-checker *.html",
    "lint": "eslint .",
    "test:scss": "stylelint sass/",
    "build": "npm-run-all build:* test",
    "build:sass": "node-sass --output-style compact -o dist/css src/sass/style.scss",
    "build:autoprefixer": "autoprefixer-cli dist/css/style.css",
    "build-dev": "npm-run-all build-dev:sass build:autoprefixer",
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o dist/css src/sass",
    "watch": "npm-run-all build build-dev -p watch:*",
    "watch:browsersync": "browser-sync start --server --files \"dist/css/*.css\" \"*.html\" \"js/*.js\"",
    "watch:sassprefixer": "onchange src/sass/*.scss -- npm run build-dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer-cli": "1.0.0",
    "browser-sync": "2.26.3",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.16.0",
    "extend": "3.0.2",
    "globstar": "1.0.0",
    "mime": "2.4.0",
    "mkdirp": "0.5.1",
    "node-sass": "4.11.0",
    "npm-run-all": "4.1.5",
    "nu-html-checker": "0.1.0",
    "onchange": "5.2.0",
    "stylelint": "9.10.1",
    "stylelint-scss": "3.5.4",
    "superagent": "4.1.0"
  },
  "dependencies": {},
  "description": ""
}
